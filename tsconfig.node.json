{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "build/node",
    "rootDir": ".",
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "allowImportingTsExtensions": false,
    "types": ["node"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"],
      "@/server/*": ["./server/*"],
      "@/services/*": ["./services/*"],
      "@/utils/*": ["./utils/*"],
      "@/types": ["./types"],
      "@/middleware/*": ["./middleware/*"],
      "@/scripts/*": ["./scripts/*"]
    }
  },
  "include": [
    "main.ts",
    "start-server.ts",
    "electron-config.ts",
    "middleware/**/*.ts",
    "scripts/**/*.ts",
    "services/**/*.ts",
    "server/**/*.ts",
    "server/**/*.mts",
    "server/**/*.d.ts",
    "utils/**/*.ts",
    "types.ts",
    "demo-enhanced-validation.ts"
  ],
  "exclude": [
    "dist",
    "release",
    "node_modules",
    "test",
    "src",
    "components",
    "contexts",
    "assets",
    "docs",
    "services/refreshService.ts"
  ]
}
