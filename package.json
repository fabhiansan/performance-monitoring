{
  "name": "performance-monitoring",
  "version": "1.0.0",
  "description": "Dashboard Penilaian Kinerja Pegawai Dinas Sosial - Employee Performance Monitoring Dashboard",
  "author": "FE Developer",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev:vite": "vite",
    "dev": "concurrently \"npm:dev:vite\" \"npm:electron:dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "dev:full": "concurrently \"npm run server:node\" \"npm run dev\"",
    "server:node": "npm run rebuild:node && node server/server.js",
    "rebuild:node": "npm rebuild better-sqlite3",
    "rebuild:electron": "npx @electron/rebuild",
    "postinstall": "electron-builder install-app-deps",
    "preelectron": "npm run rebuild:electron",
    "predist": "npm run rebuild:electron",
    "electron": "electron .",
    "electron:dev": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && cross-env NODE_ENV=production electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@types/jspdf": "^1.3.3",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.6",
    "electron-builder": "^26.0.12",
    "typescript": "~5.7.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dinsos.performance-monitoring",
    "productName": "Dashboard Penilaian Kinerja Pegawai Dinas Sosial",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "server/**/*",
      "electron-config.js",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "server/**/*",
      "node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    }
  }
}