{
  "scripts": {
    "dev:vite": "vite",
    "dev": "concurrently \"npm:dev:vite\" \"npm:electron:dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "dev:full": "concurrently \"npm run server:node\" \"npm run dev\"",
    "server:node": "npm run rebuild:node && node server/server.js",
    "rebuild:node": "npm rebuild better-sqlite3",
    "rebuild:electron": "npx electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "preelectron": "npm run rebuild:electron",
    "predist": "npm run rebuild:electron",
    "electron": "electron .",
    "electron:dev": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && cross-env NODE_ENV=production electron .",
    "dist": "npm run build && cross-env NODE_ENV=production electron-builder",
    "dist:win": "npm run build && cross-env NODE_ENV=production electron-builder --win",
    "dist:mac": "npm run build && cross-env NODE_ENV=production electron-builder --mac",
    "dist:linux": "npm run build && cross-env NODE_ENV=production electron-builder --linux"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.6",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "typescript": "~5.7.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}