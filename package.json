{
  "name": "employee-performance-analyzer",
  "productName": "Employee Performance Analyzer",
  "description": "A comprehensive dashboard for analyzing employee performance data",
  "author": "Your Name",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev:vite": "vite",
    "dev": "concurrently \"npm:dev:vite\" \"npm:electron:dev\"",
    "build": "vite build",
    "preview": "vite preview",    
    "dev:full": "concurrently \"npm run server:node\" \"npm run dev\"",
    "server:node": "npm run rebuild:node && node server/server.js",
    "rebuild:node": "npm rebuild better-sqlite3",
    "electron": "electron .",
    "electron:dev": "npm run electron:rebuild && wait-on http://localhost:5173 && NODE_ENV=development electron .",
    "electron:build": "npm run build && NODE_ENV=production electron .",
    "electron:rebuild": "npx electron-rebuild -f -w better-sqlite3",
    "electron:rebuild:win": "npm run electron:rebuild -- --arch x64",
    "rebuild:debug": "npm list electron && npx electron-rebuild -f -w better-sqlite3 --debug",
    "dist": "npm run build && npm run electron:rebuild && electron-builder",
    "dist:win": "npm run build && npm run electron:rebuild:win && electron-builder --win",
    "dist:mac": "npm run build && npm run electron:rebuild && electron-builder --mac",
    "dist:linux": "npm run build && npm run electron:rebuild && electron-builder --linux"
  },
  "dependencies": {
    "@types/jspdf": "^1.3.3",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^3.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^8.2.2",
    "electron": "^30.0.6",
    "electron-builder": "^26.0.12",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.employee-performance-analyzer",
    "productName": "Employee Performance Analyzer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "main.js",
      "electron-config.js",
      "error.html",
      "icon.png",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Employee Performance Analyzer",
      "menuCategory": "Business",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
