{
  "name": "dashboard-penilaian-kinerja-pegawai",
  "productName": "Dashboard Penilaian Kinerja Pegawai Dinas Sosial",
  "description": "Dashboard komprehensif untuk analisis kinerja pegawai Dinas Sosial",
  "author": "Fabhianto Maoludyo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev:vite": "vite",
    "dev": "concurrently \"npm:dev:vite\" \"npm:electron:dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "dev:full": "concurrently \"npm run server:node\" \"npm run dev\"",
    "server:node": "npm run rebuild:node && node server/server.js",
    "rebuild:node": "npm rebuild better-sqlite3",
    "rebuild:electron": "npx electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "preelectron": "npm run rebuild:electron",
    "predist": "npm run rebuild:electron",
    "electron": "electron .",
    "electron:dev": "wait-on http://localhost:5173 && NODE_ENV=development electron .",
    "electron:build": "npm run build && NODE_ENV=production electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@types/jspdf": "^1.3.3",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^8.2.2",
    "electron": "^30.0.6",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "typescript": "~5.7.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dinsos.dashboard-penilaian-kinerja-pegawai",
    "productName": "Dashboard Penilaian Kinerja Pegawai Dinas Sosial",
    "directories": {
      "output": "release"
    },
    "publish": null,
    "afterPack": "./build-scripts.cjs",
    "asarUnpack": [
      "server/**/*",
      "main.js",
      "electron-config.js",
      "node_modules/better-sqlite3/**/*"
    ],
    "files": [
      "dist/**/*",
      "server/**/*",
      "main.js",
      "electron-config.js",
      "assets/error.html",
      "assets/icon.png",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "server",
          "to": "resources/server"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dashboard Penilaian Kinerja Pegawai Dinas Sosial",
      "menuCategory": "Business",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
